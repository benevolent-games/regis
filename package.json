{
	"name": "@benev/tinyforge",
	"private": true,
	"version": "0.0.0-0",
	"description": "a small rts game",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "rm -rf x && turtle build --out=x -v && turtle ssg --in=s,x --out=x --exclude=bin -v && run-s assets links",
		"assets": "rm -rf x/assets && batch 3d glb --in=assets --out=x/assets --tier=mid --verbose && batch copy --in=assets --out=x/assets --find=svg,env,png --verbose",
		"links": "mkdir -p assets && ln -s \"$(realpath s)\" x/s",
		"http": "http-server x",
		"watch": "turtle watch --in=s,x --out=x --exclude=bin -v",
		"start": "run-p http watch",
		"director": "node x/director/plumbing/server.js",
		"devlinks": "run-s devlinks-toolbox devlinks-slate devlinks-renraku",
		"devlinks-toolbox": "rm -rf node_modules/@benev/toolbox && ln -s \"$(realpath ../toolbox)\" node_modules/@benev/toolbox",
		"devlinks-slate": "rm -rf node_modules/@benev/slate && ln -s \"$(realpath ../slate)\" node_modules/@benev/slate",
		"devlinks-renraku": "rm -rf node_modules/renraku && ln -s \"$(realpath ../../renraku)\" node_modules/renraku",
		"test": "cynic node x/tests.test.js",
		"test-watch": "chokidar \"x/**/*.js\" -c \"clear && npm test\"",
		"count": "find s -path '*/_archive' -prune -o -name '*.ts' -exec wc -l {} +"
	},
	"dependencies": {
		"@babylonjs/core": "^7.14.0",
		"@babylonjs/loaders": "^7.14.0",
		"@benev/slate": "^0.2.0-5",
		"@benev/toolbox": "^0.6.0-14",
		"es-module-shims": "^1.10.0",
		"renraku": "^0.2.0-0",
		"zx": "^8.1.4"
	},
	"devDependencies": {
		"@benev/batch": "^0.0.0",
		"@benev/turtle": "^0.6.0-6",
		"chokidar": "^3.6.0",
		"chokidar-cli": "^3.0.0",
		"cynic": "^0.2.1",
		"http-server": "^14.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.5.4"
	},
	"keywords": [
		"game",
		"babylon"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/benevolent-games/tinyforge.git"
	},
	"bugs": {
		"url": "https://github.com/benevolent-games/tinyforge/issues"
	},
	"homepage": "https://github.com/benevolent-games/tinyforge#readme"
}
